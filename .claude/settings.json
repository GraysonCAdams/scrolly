{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Bash(npm run dev)",
      "Bash(npm run build)",
      "Bash(npm run test *)",
      "Bash(npm run test)",
      "Bash(npm run check *)",
      "Bash(npm run check)",
      "Bash(npm run lint *)",
      "Bash(npm run lint)",
      "Bash(npm run format *)",
      "Bash(npm run format)",
      "Bash(npx drizzle-kit *)",
      "Bash(npx svelte-kit sync)",
      "Bash(git status *)",
      "Bash(git log *)",
      "Bash(git diff *)",
      "Bash(git add *)",
      "Bash(git commit *)",
      "Bash(git branch *)",
      "Bash(git checkout *)",
      "Bash(git switch *)",
      "Bash(git stash *)",
      "Bash(git show *)"
    ],
    "deny": [
      "Read(.env)",
      "Read(.env.*)",
      "Read(data/**)"
    ]
  },
  "attribution": {
    "commit": "",
    "pr": ""
  }
}
